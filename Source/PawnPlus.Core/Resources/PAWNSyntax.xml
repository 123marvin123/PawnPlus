<SyntaxDefinition name="PAWN" extensions="*.pwn" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <RuleSet ignoreCase="false">
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>#define</Word>
      <Word>#assert</Word>
      <Word>#if</Word>
      <Word>#else</Word>
      <Word>#elseif</Word>
      <Word>#emit</Word>
      <Word>#endif</Word>
      <Word>#endinput</Word>
      <Word>#endscript</Word>
      <Word>#error</Word>
      <Word>#include</Word>
      <Word>#pragma</Word>
      <Word>#tryinclude</Word>
      <Word>#undef</Word>
    </Keywords>
    <Keywords foreground="#FF000000" fontWeight="normal" fontStyle="normal">
      <Word>?</Word>
      <Word>,</Word>
      <Word>.</Word>
      <Word>;</Word>
      <Word>(</Word>
      <Word>)</Word>
      <Word>[</Word>
      <Word>]</Word>
      <Word>{</Word>
      <Word>}</Word>
      <Word>+</Word>
      <Word>-</Word>
      <Word>/</Word>
      <Word>%</Word>
      <Word>*</Word>
      <Word>&lt;</Word>
      <Word>&gt;</Word>
      <Word>^</Word>
      <Word>=</Word>
      <Word>~</Word>
      <Word>!</Word>
      <Word>|</Word>
      <Word>&amp;</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>forward</Word>
      <Word>public</Word>
      <Word>stock</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>bool</Word>
      <Word>double</Word>
      <Word>float</Word>
      <Word>Float</Word>
      <Word>new</Word>
      <Word>Text</Word>
      <Word>enum</Word>
      <Word>struct</Word>
      <Word>const</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>false</Word>
      <Word>true</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>do</Word>
      <Word>for</Word>
      <Word>while</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>break</Word>
      <Word>continue</Word>
      <Word>goto</Word>
      <Word>return</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>catch</Word>
      <Word>throw</Word>
      <Word>try</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>case</Word>
      <Word>else</Word>
      <Word>if</Word>
      <Word>switch</Word>
      <Word>default</Word>
    </Keywords>
    <Keywords foreground="#FF0000FF" fontWeight="normal" fontStyle="normal">
      <Word>sizeof</Word>
    </Keywords>
    <Span foreground="#FF008000" fontWeight="normal" fontStyle="normal">
      <Begin>//</Begin>
    </Span>
    <Span foreground="#FF008000" fontWeight="normal" fontStyle="normal" multiline="true">
      <Begin>/\*</Begin>
      <End>\*/</End>
    </Span>
    <Span foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">
      <Begin>"</Begin>
      <End>"</End>
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>
    <Span foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">
      <Begin>'</Begin>
      <End>'</End>
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>
    <Span foreground="#FF000000" fontWeight="normal" fontStyle="normal">
      <Begin foreground="#FF0000FF">(?&lt;=(^\s*))\#include</Begin>
      <RuleSet>
        <Span begin="\\" end="." />
        <Import ruleSet="IncludeStatemetSet" />
      </RuleSet>
    </Span>
    <Rule foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">\b0[xX][0-9a-fA-F]+|(\b\d+(\.[0-9]+)?|\.[0-9]+)([eE][+-]?[0-9]+)?</Rule>
  </RuleSet>
  <RuleSet name="IncludeStatemetSet" ignoreCase="false">
    <Span foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">
      <Begin>"</Begin>
      <End>"</End>
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>
    <Span foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">
      <Begin>&lt;</Begin>
      <End>&gt;</End>
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>
    <Rule foreground="#FF8B0000" fontWeight="normal" fontStyle="normal">\b0[xX][0-9a-fA-F]+|(\b\d+(\.[0-9]+)?|\.[0-9]+)([eE][+-]?[0-9]+)?</Rule>
  </RuleSet>
</SyntaxDefinition>